{ 
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "$id": "https://raw.githubusercontent.com/attestify/schema/draft-0-0-1/definitions/base-template.json#",
    "type": "object",
    "title": "Attestify - Base Template",
    "description": "The fundamental building blocks of the Attestify automated governance schema.",
    "$defs": {
        "api-version" : { 
            "description": "The attestation schema version.",
            "title": "API Version",
            "type": "string",
            "minLength": 1,
            "additionalProperties": false
        },
        "api-kind": { 
            "description": "Describes the api kind for the attestation schema.",
            "title": "API Kind",
            "type": "string",
            "minLength": 1,
            "additionalProperties": false
        },
        "metadata": { 
            "description": "A dynamic set of data which provides context the attestation.",
            "title": "Attestation Data",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "properties": {
        "apiVersion": { "$ref": "#/$defs/api-version"},
        "kind": { "$ref": "#/$defs/api-kind"},
        "metadata": { "$ref": "#/$defs/metadata"}
    },
      "required": ["apiVersion","kind","metadata"]
}